@model IEnumerable<DeliveryManagement.Zona>
@{
    ViewData["Title"] = "Index";
}

<div class="min-vh-100 py-5" style="background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://thumbs.dreamstime.com/z/nahtlose-muster-der-pizza-mit-zutaten-und-lieferungen-gezogene-%C3%BCbergabe-nahrungsmittelgekritzel-isoliert-auf-wei%C3%9Fem-hintergrund-191909444.jpg'); background-size: cover;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card shadow-lg rounded-4 mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h2 mb-0 text-primary">
                                <i class="bi bi-pin-map-fill me-2"></i>
                                Zonas de Entrega
                            </h1>
                            <a asp-action="Create" class="btn btn-outline-primary">
                                <i class="bi bi-plus-circle-fill me-2"></i>
                                Nueva Zona
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group" aria-label="Acciones de zona">
                                                    <a class="btn btn-outline-warning px-3 fw-medium" href="@Url.Action("Edit", new { id = item.Id })">
                                                        <i class="bi bi-pencil-square me-1"></i>
                                                        <span>Editar</span>
                                                    </a>
                                                    <a class="btn btn-outline-primary px-3 fw-medium" href="@Url.Action("Details", new { id = item.Id })">
                                                        <i class="bi bi-info-circle me-1"></i>
                                                        <span>Detalles</span>
                                                    </a>
                                                    <a class="btn btn-outline-danger px-3 fw-medium" href="@Url.Action("Delete", new { id = item.Id })">
                                                        <i class="bi bi-trash3 me-1"></i>
                                                        <span>Eliminar</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
