@page "/"
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero-gradient {
            background: linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7));
        }

        .corner-text {
            background-color: rgba(255, 255, 255, 0.8);
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="min-vh-100 d-flex flex-column justify-content-center position-relative"
             style="background-image: url('https://img.freepik.com/premium-vector/food-delivery-doodle-icon-set_98505-113.jpg?w=1380');
                background-size: cover;
                background-position: center;">

        <!-- Corner Texts -->
        <div class="position-absolute top-0 start-0 m-4">
            <div class="corner-text p-2 rounded-3">
                <span class="fw-semibold">PROYECTO - CLOUD COMPUTING</span>
            </div>
        </div>

        <div class="position-absolute top-0 end-0 m-4">
            <div class="corner-text p-2 rounded-3">
                <span class="fw-semibold">SEXTO SEMESTRE</span>
            </div>
        </div>

        <!-- Main Content -->
        <div class="container py-5" data-aos="zoom-in" data-aos-delay="100">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 text-center">
                    <div class="hero-gradient p-4 rounded-4">
                        <!-- Title -->
                        <h1 class="display-4 fw-bold mb-3">Food Delivery</h1>

                        <hr class="w-25 mx-auto mb-4">

                        <!-- Subtitles -->
                        <div class="py-3">
                            <h3 class="fw-semibold mb-2">Deliciosos Platos a Domicilio</h3>
                            <h4 class="fw-normal">¡Tu comida favorita en minutos!</h4>
                        </div>

                        <!-- Team Members -->
                        <div class="d-inline-block mt-4 px-4 py-2 rounded-3" style="background-color: rgba(0, 0, 0, 0.5);">
                            <p class="m-0 text-white">
                                Integrantes:
                                <span class="typed" style="color: rgba(255, 255, 255, 0.9);">
                                    Cuaycal Diego - Simbaña Omar - Quilumba Lizbeth
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>



