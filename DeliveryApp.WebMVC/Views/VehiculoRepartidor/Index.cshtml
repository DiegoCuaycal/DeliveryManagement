@model IEnumerable<DeliveryManagement.VehiculoRepartidor>

@{
    ViewData["Title"] = "Asignaciones de Vehículos";
}

<div class="min-vh-100 py-5" style="background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://thumbs.dreamstime.com/z/nahtlose-muster-der-pizza-mit-zutaten-und-lieferungen-gezogene-%C3%BCbergabe-nahrungsmittelgekritzel-isoliert-auf-wei%C3%9Fem-hintergrund-191909444.jpg'); background-size: cover;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card shadow-lg rounded-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h3 text-primary mb-0">
                                <i class="bi bi-truck me-2"></i> Asignaciones de Vehículos
                            </h1>
                            <a asp-action="Create" class="btn btn-outline-primary">
                                <i class="bi bi-plus-circle-fill me-2"></i>
                                Nueva Asignación
                            </a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                                        <th>@Html.DisplayNameFor(model => model.RepartidorId)</th>
                                        <th>@Html.DisplayNameFor(model => model.VehiculoId)</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.RepartidorId)</td>
                                            <td>@Html.DisplayFor(modelItem => item.VehiculoId)</td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">
                                                        <i class="bi bi-pencil-square me-1"></i> Editar
                                                    </a>
                                                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                                                        <i class="bi bi-info-circle me-1"></i> Detalles
                                                    </a>
                                                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                        <i class="bi bi-trash3 me-1"></i> Eliminar
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
