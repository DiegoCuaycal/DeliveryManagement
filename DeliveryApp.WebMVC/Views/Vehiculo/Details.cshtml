@model DeliveryManagement.Vehiculo

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<div class="min-vh-100 py-5" style="background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://thumbs.dreamstime.com/z/nahtlose-muster-der-pizza-mit-zutaten-und-lieferungen-gezogene-%C3%BCbergabe-nahrungsmittelgekritzel-isoliert-auf-wei%C3%9Fem-hintergrund-191909444.jpg'); background-size: cover;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="card shadow-lg rounded-4">
                    <div class="card-body p-4">
                        <h1 class="h3 text-primary mb-4 text-center">
                            <i class="bi bi-info-circle me-2"></i> Detalles del Vehículo
                        </h1>
                        <dl class="row">
                            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Id)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
                            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Matricula)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Matricula)</dd>
                            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Marca)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Marca)</dd>
                            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Modelo)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Modelo)</dd>
                            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.CapacidadCarga)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CapacidadCarga)</dd>
                            <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Tipo)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>
                        </dl>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Volver
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
